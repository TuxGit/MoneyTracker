<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="4dp"
    android:layout_marginRight="4dp"

    app:cardUseCompatPadding="true"
    app:cardElevation="4dp"
    app:cardCornerRadius="4dp">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_item"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/title"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:paddingStart="@dimen/item_padding_horizontal"
        android:paddingEnd="@dimen/item_padding_horizontal"
        android:paddingTop="@dimen/item_padding_vertical"
        android:paddingBottom="@dimen/item_padding_vertical"
        android:textColor="@color/white"
        android:textSize="20sp"
        tools:text="Молоко dasdsad dasdasd sd dsadsad"/>
    <!--android:background="@color/item"-->

    <TextView
        android:id="@+id/price"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:paddingStart="@dimen/item_padding_horizontal"
        android:paddingEnd="@dimen/item_padding_horizontal"
        android:paddingTop="@dimen/item_padding_vertical"
        android:paddingBottom="@dimen/item_padding_vertical"
        android:background="@color/item_shadow"
        android:textColor="@color/white"
        android:textSize="24sp"
        android:gravity="center"
        tools:text="351р"/>
    <!--android:background="@color/item_dark"-->

</LinearLayout>

</android.support.v7.widget.CardView>